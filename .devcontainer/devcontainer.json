{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile"
	},
  "features": {
		"docker-in-docker": {
			"version": "latest",
			"moby": true
		},
		"azure-cli": "latest",
		"ghcr.io/devcontainers/features/go:1": { "version": "1.21" },
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
  "customizations": {
		"vscode": {
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go"
			},
			"extensions": [
				"github.copilot",
				"golang.go"
			]
		}
  }
}
